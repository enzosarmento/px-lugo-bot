{
  "name": "MyBot",
  "image": "mcr.microsoft.com/devcontainers/python:3.9",
  "features": {},
  "postCreateCommand": "sudo chown -R vscode:vscode . && pip install -r requirements.txt || true",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.isort",
        "ms-python.black-formatter"
      ]
    }
  }
}